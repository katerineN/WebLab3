@page
@model WebLab.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContactForm[0].First_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactForm[0].Last_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactForm[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactForm[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactForm[0].Select_Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactForm[0].Select_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactForm[0].Comments)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ContactForm) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.First_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Last_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Select_Service)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Select_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
